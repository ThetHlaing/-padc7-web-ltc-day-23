<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>EJS</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/public/style.css">
    </head>
    <body>
        <h1>List of the things to buy for <%= data.name %></h1>
        <% if(data.isLoggedIn) { %>
            <h2>The user is logged in</h2>
        <% } %>
        <ul>
            <% data.items.forEach( item => { %>
                <li><%= item %></li>
            <% }) %>            
        </ul>
    
    </body>
</html>
