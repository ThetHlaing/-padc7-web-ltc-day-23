<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>EJS</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/public/style.css">
    </head>
    <body>
        <h1>List of the things to buy for <%= name %></h1>
        <% if(loggedIn) { %>
            <h2>You are logged in as <%= name %></h2>
        <% } %>
        <ul>
            <% data.forEach( item => { %>
                <li><%= item %></li>
            <% }) %>
        </ul>
    
    </body>
</html>
